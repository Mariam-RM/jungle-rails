<article class="product">
  <header>
    <%= link_to product do %>
      <%= image_tag product.image.thumb, alt: product.name %>
      <h4><%= product.name %></h4>
    <% end %>
  </header>
  <p class="description">
    <%= product.description %>
  </p>

  <p class="description">
    Average rating:
    <% average = product.reviews.average(:rating)  %>
     <% average.to_f.round(0).times do %>
     <span class="glyphicon glyphicon-star"></span>
      <%end %>
       <% empty = 5 - average.to_f.round(0) %>
              <% empty.times do %>
              <span class="glyphicon glyphicon-star-empty"></span>
              <%end %>
  </p>

  <footer class="actions">
    <%= button_to add_item_cart_path(product_id: product.id), class: 'btn btn-primary' , method: :post do %>
      <%= fa_icon "shopping-cart", text: 'Add' %>
    <% end %>
    <%= link_to product, class: 'btn btn-default pull-right' do %>
      Details &raquo;
    <% end %>
  </footer>

  <aside class="price">
    <%= humanized_money_with_symbol product.price %>
  </aside>

  <% if product.quantity == 0 %>
    <aside class="sold-out">
      SOLD OUT
    </aside>
  <% end %>

</article>


