<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>
  <div class="order-summary jumbotron">
      <h4>Thank you for your order!</h4>
      <h4> email for this order: <%= @order.email %> </h4>
  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2"> Items </th>
          <th>Quantity</th>
          <th> Cost</th>
        </tr>
      </thead>
      <tbody>
        <% LineItem.where(order_id: @order.id).each do |item| %>
          <%= render 'item', product: Product.find(item.product_id), quantity: item[:quantity].to_i,  total: item[:total_price_cents] %>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            Your order total is: <%= @order.total_cents / 100.0 %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
